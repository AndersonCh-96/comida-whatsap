---

import CartCount from "./react/CartCount";
import ListCart from "./react/ListCart"

---


<!-- drawer init and toggle -->
<div class="text-center  shadow-2xl py-4  bg-white sticky top-0 z-55">
    <nav class="max-w-[1500px] mx-auto">
        <div class="flex flex-wrap items-center justify-between mx-auto p-4">
            <a href="/" class="flex items-center">

                <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-black">ModayConfort</span>
            </a>

          <div class="flex gap-4">
             <a class="cursor-pointer">
                Tienda
            </a>

             <a class="cursor-pointer relative" type="button" data-drawer-target="drawer-right-example" data-drawer-show="drawer-right-example" data-drawer-placement="right" aria-controls="drawer-right-example">

              <CartCount
               client:load />
           
            </a>
          </div>
            </div>
    </nav>

</div>


<!-- drawer component -->
<div id="drawer-right-example" class="fixed md:w-[50%] top-0 right-0 z-9999 h-screen p-4 overflow-y-auto transition-transform translate-x-full bg-white  dark:bg-gray-800" tabindex="-1" aria-labelledby="drawer-right-label">
   
 <div class="py-2 mb-6">
   <h5 class="text-2xl  text-white text-center p-2 border-b space-y-2 border-gray-500">Mi carrito</h5>
 </div>
   <button type="button" data-drawer-hide="drawer-right-example" aria-controls="drawer-right-example" class="text-gray-400 cursor-pointer bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 absolute top-2.5 end-2.5 inline-flex items-center justify-center dark:hover:bg-gray-600 dark:hover:text-white" >
      <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
         <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
      </svg>
      <span class="sr-only">Close menu</span>
   </button>

   <ListCart client:load />

</div>



 <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.js"></script> 
